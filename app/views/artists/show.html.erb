<div class="container">
  <div class="row artist-show-col">
    <div class="col-xs-12 text-center"><h4><%= link_to "< Back to all artists", artists_path %></h4>
    </div>
    <div class="col-xs-12 artist-image">
      <% @artist.photos.each do |photo| %>
        <%= image_tag photo.image %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 artist-actions">
      <%= link_to "Delete artist", artist_path(@artist.id), class: "btn btn-warning", method: :delete, data: { confirm: "Are you sure you want to delete this artist completely?" } %>
    </div>
  </div>
  <div id="songs_of_artist">
    <% @artist.songs.each do |song| %>
    <div class="row">
      <div class="col-sm-7 col-sm-offset-2 song-line">
        <h4><%= song.title %> (<%= song.release_date %>)</h4>
      </div>
      <div class="col-sm-1 song-line-rating">
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-7 col-sm-offset-2">
      <%= render 'form' %>
    </div>
  </div>
</div>
