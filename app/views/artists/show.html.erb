<div class="container">
  <div class="row artist-show-col">
    <h4><%= link_to "< Back to all artists", artists_path %></h4>
    <div class="col-xs-12 artist-image">
      <!-- Insert image stuff here -->
    </div>
    <div class="row">
      <%= link_to "Add new song", new_artist_song_path(@artist.id), class: "btn btn-primary" %>
      <%= link_to "Delete artist", artist_path(@artist.id), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure you want to delete this artist completely?" } %>
    </div>
    <div class="row">
      <% @artist.songs.each do |song| %>
      <div class="col-sm-7 song-line">
            <h4><%= song.title %></h4>
      </div>
          <div class="col-sm-3 song-line">
            <%= link_to "Delete song", artist_song_path(song.id), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure you want to delete this song completely?" } %>
          </div>
      <% end %>
    </div>
  </div>
</div>
