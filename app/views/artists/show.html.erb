<div class="container">
  <div class="row artist-show-col">
    <div class="col-xs-12 text-center"><h4><%= link_to "< Back to all artists", artists_path %></h4>
    </div>
    <div class="col-xs-12 artist-image">
      <% @artist.photos.each do |photo| %>
  <%= image_tag photo.image %>
<% end %>
    </div>
  </div>
    <div class="row">
      <div class="col-xs-12 artist-actions">
        <%= link_to "Add new song", new_artist_song_path(@artist.id), class: "btn btn-primary" %>
        <%= link_to "Delete artist", artist_path(@artist.id), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure you want to delete this artist completely?" } %>
      </div>
    </div>
      <% @artist.songs.each do |song| %>
      <div class="row">
      <div class="col-sm-7 col-sm-offset-2 song-line">
          <h4><%= song.title %></h4>
      </div>
        <div class="col-sm-1 song-line">
          <%= link_to "Delete song", artist_song_path(@artist.id, song.id), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure you want to delete this song completely?" } %>
        </div>
      </div>
    <% end %>
</div>
